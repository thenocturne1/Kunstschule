    Object.values(kurseData).forEach(kurs => {
      if (kurs.nextStart >= today) {
        eintraege.push({
          date: kurs.nextStart,
          title: `Kursstart: ${kurs.title}`,
          time: kurs.time.split(' ')[1] || kurs.time,
          type: kurs.category === 'mappe' ? 'Mappe' : kurs.category === 'intensiv' ? 'Intensiv' : (kurs.isDropIn ? 'Offenes Atelier' : 'Kurs'),
          color: kurs.color,
          kursId: kurs.id
        });
      }
    });

    Object.values(workshopData).forEach(ws => {
      if (ws.dateObj >= today) {
        eintraege.push({
          date: ws.dateObj,
          title: `Workshop: ${ws.title}`,
          time: '10:00-17:00',
          type: 'Workshop',
          color: ws.color,
          kursId: ws.id
        });
      }
