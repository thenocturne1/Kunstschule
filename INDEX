  const handleFormSubmit = (e) => {
    e.preventDefault();
    const mailtoLink = `mailto:weissjohannes@yahoo.de?subject=${encodeURIComponent(formData.subject || 'Anfrage von der Website')}&body=${encodeURIComponent(`Name: ${formData.name}\nE-Mail: ${formData.email}\n\n${formData.message}`)}`;
    window.open(mailtoLink, '_blank');
    setFormSent(true);
    setTimeout(() => setFormSent(false), 3000);
