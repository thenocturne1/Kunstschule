    kalenderEintraege.forEach(e => {
      const monat = e.date.toLocaleString('de-DE', { month: 'long', year: 'numeric' });
      if (!monate[monat]) monate[monat] = [];
      monate[monat].push(e);
    });
    return monate;
  }, [kalenderEintraege]);

